{
  "name": "@berrycube/n8n-nodes-oauth2-enhanced",
  "version": "0.1.0",
  "description": "Enhanced OAuth2 credential + Smart HTTP for n8n",
  "license": "MIT",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist/**/*"
  ],
  "keywords": [
    "n8n-community-node-package",
    "n8n",
    "oauth2",
    "http"
  ],
  "engines": {
    "node": ">=20.15"
  },
  "n8n": {
    "n8nNodesApiVersion": 1,
    "credentials": [
      "dist/credentials/OAuth2Enhanced.credentials.js"
    ],
    "nodes": [
      "dist/nodes/SmartHttp/SmartHttp.node.js"
    ]
  },
  "scripts": {
    "build": "tsc && npm run copy-files",
    "copy-files": "copyfiles -u 1 \"nodes/**/*.{png,svg}\" \"credentials/**/*.{png,svg}\" dist/",
    "dev": "node scripts/dev-server.js",
    "dev:watch": "concurrently \"tsc --watch\" \"npm run copy-files --watch\"",
    "dev:test": "node scripts/simple-test-runner.js",
    "dev:debug": "node --inspect-brk ./dist/index.js",
    "start": "npm run build && node ./dist/index.js",
    "lint": "node scripts/lint-check.js || eslint nodes credentials --ext .ts || echo '⚠️ ESLint failed due to dependency issue, skipping for now'",
    "lintfix": "eslint nodes credentials --ext .ts --fix || echo '⚠️ ESLint fix failed due to dependency issue'",
    "test": "vitest --run",
    "test:watch": "vitest",
    "test:coverage": "vitest --coverage",
    "test:ui": "vitest --ui",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf dist",
    "prepublishOnly": "npm run build && npm run lint"
  },
  "devDependencies": {
    "@types/node": "^20.11.19",
    "@typescript-eslint/eslint-plugin": "^8.41.0",
    "@typescript-eslint/parser": "^8.41.0",
    "@vitest/ui": "^3.2.4",
    "concurrently": "^8.2.2",
    "copyfiles": "^2.4.1",
    "eslint": "^8.57.0",
    "n8n-workflow": "^1.106.0",
    "typescript": "^5.3.3",
    "vitest": "^3.2.4"
  },
  "peerDependencies": {
    "n8n-workflow": "*"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/berrycube/n8n-nodes-oauth2-enhanced.git"
  },
  "bugs": {
    "url": "https://github.com/berrycube/n8n-nodes-oauth2-enhanced/issues"
  },
  "homepage": "https://github.com/berrycube/n8n-nodes-oauth2-enhanced#readme"
}